---
import { Image } from "astro:assets";
import { cn } from "mizuhara/utils";

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  className?: string;
  quality?: number;
}
const { className } = Astro.props;
---

<Image
  class={cn("rounded-lg [&:not(:first-child)]:mt-6", className)}
  {...Astro.props}
/>
