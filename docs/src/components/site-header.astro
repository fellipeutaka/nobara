---
import { siteConfig } from "~/config/site";
import { Icons } from "./icons";
import MainNav from "./layout/main-nav.astro";
import { MobileNav } from "./layout/mobile-nav";
// import { ThemeToggle } from "./theme-toggle";
import { ButtonStyles } from "./ui/button";
---

<header
  class="bg-background/90 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div class="container h-full flex items-center justify-between">
    <div class="flex items-center space-x-6">
      <a
        href="/"
        class="flex items-center space-x-2 rounded-md h-6 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-ring ring-offset-background"
      >
        <Icons.Logo className="h-6 w-6" />
        <span class="font-medium text-2xl leading-none">
          {siteConfig.name}
        </span>
      </a>
      <MainNav />
    </div>
    <div class="flex items-center space-x-2 md:space-x-4">
      <a
        href={siteConfig.links.github}
        target="_blank"
        rel="noreferrer"
        class={ButtonStyles({ size: "icon", variant: "ghost" })}
      >
        <Icons.GitHub className="h-6 w-6" />
        <span class="sr-only">GitHub</span>
      </a>
      {/* <ThemeToggle /> */}
      <MobileNav client:media="(max-width: 768px)" />
    </div>
  </div>
</header>
